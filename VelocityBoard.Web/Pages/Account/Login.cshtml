@page
@model LoginModel

<h2>Login</h2>

<form method="post">
    <input asp-for="Email" class="form-control mb-2" placeholder="Email" />
    <input asp-for="Password" type="password" class="form-control mb-2" placeholder="Password" />
    <button class="btn btn-primary">Login</button>
</form>

@if (Model.Error != null)
{
    <p class="text-danger">@Model.Error</p>
}

