@page
@model CreateModel

<h2>Create Task</h2>

<form method="post">
    <input asp-for="Task.Title" class="form-control mb-2" placeholder="Title" />
    <textarea asp-for="Task.Description" class="form-control mb-2"></textarea>

    <select asp-for="Task.Status" class="form-control mb-2">
        <option>Pending</option>
        <option>InProgress</option>
        <option>Completed</option>
    </select>

    <input asp-for="Task.DueDate" type="date" class="form-control mb-2" />
    <button class="btn btn-primary">Save</button>
</form>
